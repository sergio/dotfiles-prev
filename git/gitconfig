[alias]
        st = status
        ci = commit
        br = branch
        lg = log --pretty=format:'[%h] [%ad] %s'
        graph = log --pretty=format:'%h %Cgreen %an: %Creset %s' --graph
        w = whatchanged
        diffc = diff --cached
	last = log -1 HEAD
	unstage = reset HEAD --

[core]
	excludesfile = /Users/sergio/.gitignore_global
[push]
	default = simple
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
